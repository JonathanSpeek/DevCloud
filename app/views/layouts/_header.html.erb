<header>
  <nav class="grey darken-4" role="navigation">
    <div class="nav-wrapper container">
      <%= link_to 'DevCloud', root_url, class: 'brand-logo yellow-text text-accent-4', id: 'logo-container' %>
      <a href="#" data-activates="mobile-demo" class="button-collapse white-text"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <% if user_signed_in? %>
            <% if current_user.image %>
                <li><%= image_tag(current_user.image, 'data-activate': 'slide-out',class: 'circle responsive-img profile_pic button', size: '48x48', alt: current_user.name) %></li>
            <% else %>
                <li><a class='button' href='#' data-activates='slide-out'><i class="material-icons">menu</i></a></li>
            <% end %>
        <% else %>
            <li><%= link_to 'Contact Us', contacts_path, class: 'white-text' %></li>
            <li><%= link_to 'Sign up', new_registration_path(resource_name) %></li>
            <li><%= link_to 'Sign in', new_user_session_path, class: 'btn yellow accent-4 grey-text text-darken-4' %></li>
        <% end %>
      </ul>

      <%= render partial: 'layouts/slideout_menu' %>
      <%= render partial: 'layouts/mobile_menu' %>
    </div>
  </nav>
  <script>$(document).ready(function () {
    $('.button-collapse').sideNav();
    $('.button').sideNav({edge: 'right'});
  });
  </script>
</header>
