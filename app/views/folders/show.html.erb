<h3 class="bold">
  <%= @folder.name %>
</h3>
<% unless @notes.blank? %>
  <br>
  <h4 class="bold">
    Notes&nbsp&nbsp
    <%= link_to new_note_path(folder_id: @folder.id) do %>
        <i class='fa fa-plus-circle deep-purple-text text-accent-3 pull-right'></i>
    <% end %>
  </h4>
  <hr>
  <div class='row'>
    <% @notes.each do |note| %>
      <div class='col s12 m6'>
        <div class='card white-text grey darken-4'>
          <div class='card-content white-text'>
            <h2><span class='card-title'><%= note.title %></span></h2>
            <p>Last edit: <%= time_ago_in_words(note.created_at) %> ago</p>
          </div>
          <div class='card-action'>
            <p><a class='btn white-text deep-purple accent-3' href="<%= (url_for [note]) %>">Read Note</a></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <br>
  <div align="center">
  <%= will_paginate @notes, renderer: MaterializePagination::Rails %>
  </div>
  <br>
  <%= render 'uploads/index' %>
<% else %>
  <br>
  <h3 class="bold">Notes</h3>
  <hr>
  <%= link_to 'New Note', new_note_path(folder_id: @folder.id), class: 'waves-effect btn white-text deep-purple accent-3' %>
  <br>
  <br>
  <%= render 'uploads/index' %>
<% end %>
<br/><br/><br/>