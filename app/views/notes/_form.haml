%h2.bold Edit Note
= simple_form_for @note do |f|
  = hidden_field_tag 'folder_id', @folder.id
  = f.input :title
  = f.input :content, input_html: { style: 'height:50em;', class: 'markdown_preview markdown-toolbar' }
  %br
  = f.submit 'Save', class: 'btn deep-purple accent-3 white-text'

= include_markdown_preview_if_needed
