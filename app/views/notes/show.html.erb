<div class="row">
  <div class='col s12 m12'>
    <div class='card grey-text text-darken-4' style="padding: 20px;">
      <div>
        <h1>
          <%= @note.title %>
        </h1>
        <div>
          <%= markdown @note.content %>
        </div>
      </div>
    </div>
  </div>
</div>
<div>
  <div style="float:left;">
    <%= link_to edit_note_path(@note), class: 'btn-floating yellow accent-4 grey-text text-darken-4' do %>
        <i class='material-icons grey-text text-darken-4'>mode_edit</i>
    <% end %>
  </div>
  <div style="float:left;margin-left:10px;">
    <%= button_to note_path(@note), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn-floating grey-text text-lighten-5 red darken-4', onclick: "Materialize.toast('#{@note.title} Deleted', 4000)" do %>
        <i class='material-icons grey-text text-darken-4'>delete</i>
    <% end %>
  </div>
</div>