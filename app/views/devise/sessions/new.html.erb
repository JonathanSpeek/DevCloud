<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, class: 'materialize-textarea' %>
    <%= f.input :password, required: false, class: 'materialize-textarea' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn yellow accent-4 grey-text text-darken-4' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
